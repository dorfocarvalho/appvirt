<div class="card card-body">
    <h3>Nova solicitação</h3>
    <form method="post" action="/request/confirm">
        <div class="form-group">
            <label for="exampleFormControlInput1">Nome de Usuário</label>
            <input type="username" class="form-control" name="username" id="username" placeholder="{{user}}" readonly>
        </div>
        <div class="form-group">
            <label for="exampleFormControlInput1">Dominio</label>
            <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="{{domain}}" readonly>
        </div>
        <div class="form-group">
            <label for="exampleFormControlSelect1">Selecione aplicação a ser incluída</label>
            <select class="form-control" id="app" name="app">
                <option name="msoffice" value="msoffice">Microsoft Office</option>
                <option name="Winrar" value="winrar">WinRar</option>
                <option name="vscode" value="vscode">Visual Studio Code</option>
                <option name="notepad" value="notepad">Notedpad++</option>
                <option name="adobe" value="adobe">Adobe Reader X</option>
            </select>
        </div>
        <div class="form-group">
            <label for="exampleFormControlTextarea1">User Groups</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="5" readonly>{{groups}}</textarea>
        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
    </form>
</div>